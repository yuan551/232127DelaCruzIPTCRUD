@{
    ViewData["Title"] = "Create Tables";
}

<div class="container mt-4">
    <h2>Create Database Tables (studentNumber + lastName)</h2>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">@ViewBag.Error</div>
    }

    @if (ViewBag.Success != null)
    {
        <div class="alert alert-success"><pre>@ViewBag.Success</pre></div>
    }

    <form method="post" asp-action="CreateTables">
        <div class="mb-3">
            <label class="form-label">Student Number</label>
            <input class="form-control" name="studentNumber" required />
        </div>
        <div class="mb-3">
            <label class="form-label">Last Name</label>
            <input class="form-control" name="lastName" required />
        </div>

        <div class="form-check">
            <input class="form-check-input" type="checkbox" name="createUser" checked />
            <label class="form-check-label">Create USER table</label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="checkbox" name="createStudent" checked />
            <label class="form-check-label">Create STUDENT table</label>
        </div>
        <div class="form-check mb-3">
            <input class="form-check-input" type="checkbox" name="createCourse" checked />
            <label class="form-check-label">Create COURSE table</label>
        </div>

        <button class="btn btn-primary" type="submit">Create</button>
    </form>

    <hr />
    <h4>Create User (for login)</h4>
    @if (ViewBag.UserError != null)
    {
        <div class="alert alert-danger">@ViewBag.UserError</div>
    }
    @if (ViewBag.UserSuccess != null)
    {
        <div class="alert alert-success">@ViewBag.UserSuccess</div>
    }
    <form method="post" asp-action="CreateUser">
        <div class="mb-3">
            <label class="form-label">First Name</label>
            <input class="form-control" name="fname" required />
        </div>
        <div class="mb-3">
            <label class="form-label">Last Name</label>
            <input class="form-control" name="lname" required />
        </div>
        <div class="mb-3">
            <label class="form-label">Password</label>
            <input class="form-control" name="password" required />
        </div>
        <button class="btn btn-success" type="submit">Create User</button>
    </form>

    <hr />
    <p class="text-muted">Note: Student number must be digits only; Last name letters only. This will create tables named like <strong>232127DelaCruzUSER</strong>.</p>
</div>
