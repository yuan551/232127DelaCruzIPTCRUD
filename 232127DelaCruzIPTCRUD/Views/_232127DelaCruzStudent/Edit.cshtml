@model _232127DelaCruzIPTCRUD.Models._232127DelaCruzStudentModel

@{
    ViewData["Title"] = "Edit Student";
}

<div class="mb-4">
    <h2>Edit Student</h2>
    <p class="text-muted">Update student information</p>
</div>

<div class="card">
    <div class="card-body">
        <form method="post" asp-action="Edit">
            <input type="hidden" name="STUDENTID" value="@Model.STUDENTID" />

            <div class="row mb-3">
                <div class="col-md-4">
                    <label for="FNAME" class="form-label">First Name</label>
                    <input type="text" class="form-control" id="FNAME" name="FNAME" value="@Model.FNAME" required>
                </div>
                <div class="col-md-4">
                    <label for="LNAME" class="form-label">Last Name</label>
                    <input type="text" class="form-control" id="LNAME" name="LNAME" value="@Model.LNAME" required>
                </div>
                <div class="col-md-4">
                    <label for="MNAME" class="form-label">Middle Name</label>
                    <input type="text" class="form-control" id="MNAME" name="MNAME" value="@Model.MNAME">
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <label for="BDAY" class="form-label">Birthday</label>
                    <input type="date" class="form-control" id="BDAY" name="BDAY" value="@Model.BDAY.ToString("yyyy-MM-dd")" required>
                </div>
                <div class="col-md-6">
                    <label for="GENDER" class="form-label">Gender</label>
                    <select class="form-select" id="GENDER" name="GENDER" required>
                        <option value="Male" selected="@(Model.GENDER == "Male")">Male</option>
                        <option value="Female" selected="@(Model.GENDER == "Female")">Female</option>
                        <option value="Other" selected="@(Model.GENDER == "Other")">Other</option>
                    </select>
                </div>
            </div>

            <div class="mb-3">
                <label for="COURSEID" class="form-label">Course</label>
                <select class="form-select" id="COURSEID" name="COURSEID" required>
                    @foreach (var course in ViewBag.Courses)
                    {
                        <option value="@course.COURSEID" selected="@(Model.COURSEID == course.COURSEID)">@course.DESCRIPTION</option>
                    }
                </select>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check-circle"></i> Update Student
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-x-circle"></i> Cancel
                </a>
            </div>
        </form>
    </div>
</div>
